<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/white"
        android:layout_marginBottom="2dp"
        >

        <TextView
            android:id="@+id/anime_main_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/anime_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Anime Name"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/anime_main_id_txt"
            app:layout_constraintTop_toTopOf="@+id/anime_main_id_txt"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/anime_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime ID"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/anime_main_id_txt"
            app:layout_constraintStart_toStartOf="@+id/anime_name_txt" />

        <TextView
            android:id="@+id/anime_score_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="Score:"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/anime_score_txt"
            app:layout_constraintEnd_toStartOf="@+id/anime_score_txt"
            app:layout_constraintTop_toTopOf="@+id/anime_score_txt"
            app:layout_constraintVertical_bias="0.523" />

        <TextView
            android:id="@+id/cordX_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="X"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/anime_name_txt"
            app:layout_constraintTop_toTopOf="@+id/anime_name_txt" />

        <TextView
            android:id="@+id/cordY_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Y"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/anime_id_txt"
            app:layout_constraintStart_toEndOf="@+id/anime_name_txt"
            app:layout_constraintTop_toBottomOf="@+id/cordX_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>